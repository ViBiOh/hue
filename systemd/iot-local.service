[Unit]
Description=iot-local
After=network.target

[Service]
Type=simple
User=vibioh
EnvironmentFile=/home/vibioh/.env
ExecStart=/home/vibioh/code/bin/iot -csp default-src 'self'; base-uri 'self'; script-src 'unsafe-inline'; style-src 'unsafe-inline' -secretKey ${SECRET_KEY} -dysonEmail ${DYSON_EMAIL} -dysonPassword ${DYSON_PASSWORD}
Restart=always
RestartSec=60s

[Install]
WantedBy=multi-user.target
